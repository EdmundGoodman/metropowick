% Captions
\captionsetup[figure]{labelfont={bf,color=aubergine}}
\captionsetup[table]{labelfont={bf,color=aubergine}}

% Progress Bar
\newcommand{\progressbar}{1pt}
\makeatletter
\setlength{\metropolis@titleseparator@linewidth}{\progressbar}
\setlength{\metropolis@progressonsectionpage@linewidth}{\progressbar}
\setlength{\metropolis@progressinheadfoot@linewidth}{\progressbar}
\makeatother

% Slide colors
\setbeamercolor{alerted text}{fg=brightgold}
\setbeamercolor{example text}{fg=darkgold}
\setbeamercolor{palette primary}{bg=aubergine}
\setbeamercolor{bibliography entry location}{fg=aubergine}

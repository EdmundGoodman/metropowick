\RequirePackage{caption}
\RequirePackage{lato}

% Constants
\definecolor{aubergine}{RGB}{60,16,83}
\definecolor{brightteal}{RGB}{109,205,184}
\definecolor{brightblue}{RGB}{0,169,206}
\definecolor{brightorange}{RGB}{232,119,34}
\definecolor{brightruby}{RGB}{203,51,59}
\definecolor{brightgold}{RGB}{241,190,72}
\definecolor{darkteal}{RGB}{80,127,112}
\definecolor{darkblue}{RGB}{65,116,141}
\definecolor{darkorange}{RGB}{190,83,28}
\definecolor{darkruby}{RGB}{157,34,53}
\definecolor{darkgold}{RGB}{214,154,45}
\definecolor{black}{RGB}{0,0,0}
\definecolor{grey}{RGB}{88,89,91}
